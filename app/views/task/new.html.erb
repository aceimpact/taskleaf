<% provide(:title, '新規登録') %>

<h1>タスク新規登録</h1>


<%= form_tag ({ :controller => 'task', :action => 'create'}) do %>
<form>
  <div class = "form-group">
    <label for="task_name">名称</label>
    <input type="task_name" name="task_name" class="form-control">
  </div>

  <div class = "form-group">
    <label for="description">詳しい説明</label>
    <textarea name="description" class="form-control" rows="8">
    </textarea>
  </div>

  <div class="action">
    <input type="submit" value="登録する">
  </div>
  </form>
  <% end %>
