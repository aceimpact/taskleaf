<% provide(:title, 'タスク一覧') %>

<h1>タスク一覧</h1>


  <%= link_to "/tasks/new", class: 'btn btn-primary' do %>
  <i class="fa fa-arrow-left"></i>
  <span>新規登録</span>
  <% end %>


<table class="table">
<tr>
  <th>名称</th>
  <th>登録日時</th>
</tr>

<tr>
  <% @tasks.each do |task| %>
    <td><%= task.task_name %></td>
    <td><%= task.created_at %></td>
  <% end %>
</tr>
</table>
